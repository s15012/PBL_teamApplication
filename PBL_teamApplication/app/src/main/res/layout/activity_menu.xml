<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.example.s15012.pbl_teamapplication.Menu">


    <!-- 会員情報変更ボタン-->

    <Button
        android:id="@+id/m_editRegist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="120sp"
        android:layout_marginBottom="5sp"
        android:paddingLeft="52sp"
        android:paddingRight="52sp"
        android:text="会員情報変更"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame_style"
        />

    <!--  退会ボタン  -->
    <Button
        android:id="@+id/m_Withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="65sp"
        android:layout_marginBottom="5sp"
        android:paddingLeft="129sp"
        android:paddingRight="129sp"
        android:layout_below="@+id/m_editRegist"
        android:text="退会"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame_style"
        />

    <!--  商品一覧ボタン -->
    <Button
        android:id="@+id/m_goodsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="65sp"
        android:layout_marginBottom="5sp"
        android:paddingLeft="92sp"
        android:paddingRight="92sp"
        android:layout_below="@+id/m_Withdrawal"
        android:text="商品一覧"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame_style"
        />

    <!--  注文状況確認ボタン  -->
    <Button
        android:id="@+id/m_statusCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="65sp"
        android:layout_marginBottom="5sp"
        android:paddingLeft="52sp"
        android:paddingRight="52sp"
        android:layout_below="@+id/m_goodsList"
        android:text="注文状況確認"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame_style"
        />


    <!-- ログアウトボタン  -->
    <Button
        android:id="@+id/m_Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="65sp"
        android:paddingLeft="77sp"
        android:paddingRight="77sp"
        android:layout_below="@+id/m_statusCheck"
        android:text="ログアウト"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame_style"
        />




</RelativeLayout>

