<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.s15012.pbl_teamapplication.OrderControl">


    <TextView
        android:id="@+id/err404"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="404 File not found"
        android:textSize="60sp"
        android:textColor="#FF0000"
        android:layout_marginTop="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/webText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="お探しのページが見つかりません"
        android:textSize="35sp"
        android:textColor="#0000FF"
        android:layout_below="@id/err404"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webText"
        android:text="可能性のある原因"
        android:textSize="33sp"
        android:layout_marginTop="30sp"
        android:layout_marginStart="10sp"
        />

    <TextView
        android:id="@+id/errText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/err"
        android:text=" ◉ 一時的にアクセスできない状況にある。\n ◉ ページが移動、削除された可能性がある。 \n ◉ ページが未完成 \n    そもそも作成されていない可能性がある。"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        />


    <TextView
        android:id="@+id/deal"
        android:layout_below="@+id/errText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="対処方法"
        android:textSize="33sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="10sp"

        />
    <TextView
        android:id="@+id/dealText"
        android:layout_below="@+id/deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ◉ 前のページに戻る \n ◉ 諦める \n ◉ 完成されていないページを作成する \n ◉ 管理者に問合せをする。"
        android:textSize="25sp"

        />

    <TextView
        android:id="@+id/apology"
        android:layout_below="@+id/dealText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="         商品関係の制作\n   間に合いませんでした。 \n     申し訳ございません"
        android:textSize="40sp"
        android:layout_marginTop="40sp"
        android:layout_marginStart="40sp"

        />

</RelativeLayout>

